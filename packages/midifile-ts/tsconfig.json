{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2017"],
    "outDir": "dist",
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
